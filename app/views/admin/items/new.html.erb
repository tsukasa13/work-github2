<div>
  <h1>商品新規登録</h1>
  <% if @item.errors.any? %>
    <%= @item.errors.count %>件のエラーが発生しました。
    <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @item, url: admin_items_path do |f| %>
    <h4>商品画像</h4>
    <%= f.file_field :image, accept: "image/*" %>

    <h4>商品名</h4>
    <%= f.text_field :name %>

    <h4>商品説明</h4>
    <%= f.text_area :introduction %>

    <h4>税抜価格</h4>
    <%= f.text_field :price %>

    <%= f.submit '新規登録' %>
  <% end %>
</div>