<div class="container p-4">
  <div class="row">
    <div class="mx-auto">
      <h3>商品詳細</h3>
      <div class="d-flex p-5 bd-highlight">
        <div class="p-2 bd-highlight">
          <%= image_tag @item.get_image, size: "400x300" %>
        </div>

        <div class="p-2 bd-highlight">
          <p>商品名 <%= @item.name %></p>
          <p>商品説明 <%= @item.introduction %></p>
          <p>税込価格(税抜価格) <%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price %>)円</p>
        </div>
      </div>
      <div class="text-center">
        <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>
