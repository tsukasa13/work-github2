<div>
  <h3>注文情報確認</h3>

  <div>
    <div>
      <table>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <% @cart_items.each do |cart_item| %>
          <tbody>
            <tr>
              <td>
                <%= image_tag cart_item.item.get_image, size: "100x100" %>
                <%= cart_item.item.name %>
              </td>
              <td><%= cart_item.item.add_tax_price %></td>
              <td><%= cart_item.amount %></td>
              <td><%= cart_item.subtotal %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>

    <div>
      <table>
        <thead>
          <tr>
            <th>送料</th>
            <td></td>
          </tr>
          <tr>
            <th>商品合計</th>
            <td></td>
          </tr>
          <tr>
            <th>請求金額</th>
            <td></td>
          </tr>
        </thead>
      </table>
    </div>

    <div>
      <h3>支払方法</h3>
      <%= @order.method_of_payment_i18n %>
      <h3>お届け先</h3>
      〒<%= @order.shipping_postal_code %>
      <%= @order.shipping_address %>
      <%= @order.delivery_name %>
    </div>

  </div>
</div>