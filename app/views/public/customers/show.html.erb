<div class="container">
  <div class="p-5">
    <h3>マイページ</h3>
  </div>

  <div class="row">
    <div class="col-10">
      <div class="p-3">
        <h4>
          登録情報
          <% if @customer == current_customer %>
            <%= link_to "編集する", customers_information_edit_path, class: "btn btn-success" %>
          <% end %>
        </h4>
      </div>

      <div>
        <p>氏名  <%= @customer.last_name %><%= @customer.first_name %></p>
        <p>カナ  <%= @customer.last_name_kana %><%= @customer.first_name_kana %></p>
        <p>郵便番号  <%= @customer.postal_code %></p>
        <p>住所  <%= @customer.address %></p>
        <p>電話番号  <%= @customer.telephone_number %></p>
        <p>メールアドレス  <%= @customer.email %></p>
      </div>

      <div class="p-3">
        <h4>注文履歴  <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %></h4>
      </div>
    </div>
  </div>
</div>
