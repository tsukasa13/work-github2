<div>
  <h3>
    ショッピングカート <%= button_to "カートを空にする", destroy_all_cart_items_path, method: :delete, "data-confirm" => "本当に削除しますか？" %>
  </h3>
  <div>
    <div>
      <table>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <% @cart_items.each do |cart_item| %>
          <tbody>
            <tr>
              <td>
                <%= image_tag cart_item.item.get_image, size: "100x100" %>
                <%= cart_item.item.name %>
              </td>
              <td><%= cart_item.item.price %>(<%= cart_item.item.add_tax_price %>)</td>
              <td>
                <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %>
                  <%= f.select :amount, *[1..10] %>
                  <%= f.submit "変更" %>
                <% end %>
              </td>
              <td><%= cart_item.subtotal %></td>
              <td><%= link_to "削除", cart_item_path(cart_item.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
      <%= link_to "買い物を続ける", items_path %>
      合計金額 <%= @total.round.to_s(:delimited) %>
    </div>
  </div>
</div>